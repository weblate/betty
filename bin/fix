#!/usr/bin/env bash

set -Eeuo pipefail

cd "$(dirname "$0")/.."

# Fix Python code style violations.
ruff check --fix .
ruff format .

# Fix CSS code style violations.
./node_modules/.bin/stylelint --fix  "./betty/**/*.css" "./betty/**/*.scss" "./raspberry-mint-dev/**/*.css" "./raspberry-mint-dev/**/*.scss"

# Fix JS code style violations.
./node_modules/.bin/eslint --fix -c ./eslint.config.js ./betty ./raspberry-mint-dev
